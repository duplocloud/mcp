{
  "version": "2.0.0",
  "options": {
    "env": {
      "PY_VERSION": "3.13"
    }
  },
  "tasks": [
    {
      "label": "init",
      "type": "shell",
      "command": "./scripts/init.sh",
      "problemMatcher": [],
      "detail": "Create a virtual environment and install dependencies."
    },
    {
      "type": "process",
      "label": "Install",
      "detail": "Runs the pip installation in editable mode for the development environment.",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "cloud-download"
      },
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pip",
        "install",
        "--editable",
        ".[build,test]"
      ],
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "Pip Audit",
      "detail": "Audits the installed packages",
      "group": "build",
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "issues"
      },
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pip_audit"
      ]
    },
    {
      "type": "process",
      "label": "Lint",
      "detail": "Does a lint check on the code with Ruff",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "icon": {
        "color": "terminal.ansiCyan",
        "id": "inspect"
      },
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "ruff",
        "check",
        "./duplocloud"
      ],
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "bake image",
      "detail": "Build Docker image using buildx bake. Use for multi arch builds.",
      "group": "build",
      "command": "docker",
      "args": [
        "buildx",
        "bake",
        "duploctl"
      ]
    },
    {
      "label": "Up",
      "type": "shell",
      "command": "docker compose up",
      "problemMatcher": [],
      "isBackground": true,
      "detail": "Start the MCP server with docker."
    },
    {
      "label": "start",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m duplocloud.mcp",
      "problemMatcher": [],
      "detail": "Use this when you want to run your code locally and run the code you are writing at that moment",
      "icon": {
        "id": "agent",
        "color": "terminal.ansiGreen"
      },
      "options": {
        "env": {
          "DUPLO_HOST": "${env:DUPLO_HOST}",
          "DUPLO_TOKEN": "${env:DUPLO_TOKEN}",
          "DUPLO_TENANT": "${env:DUPLO_TENANT}"
        }
      }
    }
  ]
}